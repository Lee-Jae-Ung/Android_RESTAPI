<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.restapi.SetIP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DVNAME : "
                android:textSize="15dp"
                android:ems="4"

                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp" />

            <EditText
                android:id="@+id/edit_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:inputType="textPersonName" />
            <Button
                android:id="@+id/btn_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:background="#AFEEEE"
                android:layout_marginBottom="10dp"
                android:text="insert" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location  : "
                android:ems="4"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp" />

            <EditText
                android:id="@+id/edit_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:inputType="textPersonName"
                android:layout_toRightOf="@+id/text_id" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update"
                android:layout_marginLeft="5dp"

                android:background="#AFEEEE"
                android:layout_marginBottom="10dp"
                android:layout_alignStart="@+id/btn_insert"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_Ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP              : "

                android:textSize="15dp"
                android:ems="4"

                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp" />

            <EditText
                android:id="@+id/edit_Ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:inputType="textPersonName"
                android:layout_toRightOf="@+id/text_id" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="delete"
                android:background="#AFEEEE"
                android:layout_marginBottom="10dp"
                android:layout_alignStart="@+id/btn_insert"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_alignLeft="@+id/text_name"

                android:text="Sort by "
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/check_devicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DeviceName"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/text_sort"
                android:layout_marginLeft="3dp"
                android:layout_alignTop="@+id/text_sort" />


            <CheckBox
                android:id="@+id/check_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_alignTop="@+id/text_sort" />


            <CheckBox
                android:id="@+id/check_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ip"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@+id/text_sort" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="right"
                android:id="@+id/btn_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="12dp"
                android:background="#AFEEEE"
                android:layout_marginBottom="10dp"
                android:text="view" />
            <Button
                android:layout_gravity="right"
                android:id="@+id/create_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="12dp"
                android:background="#AFEEEE"
                android:layout_marginBottom="10dp"
                android:text="create" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Device">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Location">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="IP">

            </TextView>
        </LinearLayout>


    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ListView
            android:id="@+id/db_list_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></ListView>
    </ScrollView>







</LinearLayout>